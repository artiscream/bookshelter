<!-- Container (TOUR Section) -->
 <div id="tour" class="bg-1">
  <div class="container">
    <h3 class="text-center">Our assortment</h3>
    <br>
    <hr>
    <p class="text-center"></p>
 
    <% @books.each do |book| %>
     


     <div class="col-sm-4">
          <div class="thumbnail"> 
               
              <h2 style="text-align:center;"><%= link_to book.title, book_path(book) %></h2> 
             <%= image_tag(book.image, size: "200x200") %>

              <div class="caption" style="text-align: center;">
              <% if user_signed_in? %>
                <%= link_to like_book_path(book), class: "like", method: :put do%>
                
                <button type="button" class="btn btn-modal" aria-label="Left Align">
                <span class="glyphicon glyphicon-thumbs-up glyphicon-align-center" aria-hidden="true"></span>
                <span class="badge"><%= book.get_upvotes.size %></span>
                </button>
                <% end %>

                <%= link_to dislike_book_path(book), class: "like", method: :put do%>
                <button type="button" class="btn btn-modal" aria-label="Left Align">
                <span class="glyphicon glyphicon-thumbs-down glyphicon-align-center" aria-hidden="true"></span>
                <span class="badge"><%= book.get_downvotes.size %></span>
                </button>
                <% end %>
                <% else %>
                <span class="glyphicon glyphicon-thumbs-up glyphicon-align-center" aria-hidden="true"></span>
                <span class="badge"><%= book.get_upvotes.size %></span>
                <span class="glyphicon glyphicon-thumbs-down glyphicon-align-center" aria-hidden="true"></span>
                <span class="badge"><%= book.get_downvotes.size %></span>
                <% end %>
              </div>
          </div> 
      
     </div>



    <% end %>
 

</div></div>