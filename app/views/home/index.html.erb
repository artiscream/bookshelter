<div class="container">
  <div class="row">

<% @products.each do |product| %>
	<div class="col-sm-4">
    <div class="panel panel-success">
        <div class="panel-heading">
        <h3><%= link_to product.prname, product_path(product) %></h3>
        </div>

        			<div class="panel-body">

        <%= image_tag product.photo_file_name, size: "330x180" %><br />

        			</div>
        	<div class="panel-footer">

		<p style="text-align: center;"><%= product.cost %><br /></p>

		 	</div>
		</div>
		</div> 
<% end %>
    
  </div>
</div> 

