<%= form_for @userparam do |f| %>

<div class="form-group">
<%= f.label :firstname %><br/>
<%= f.text_field :firstname, class:"form-control" %><br/>
</div>

<div class="form-group">
<%= f.label :lastname %><br/>
<%= f.text_field :lastname , class:"form-control"%><br/>
</div>

<div class="form-group">
<%= f.label :city %><br/>
<%= f.text_field :city , class:"form-control"%><br/>
</div>

<div class="form-group">
<%= f.label :avatar %><br/>
<%= f.file_field :avatar%><br/>
</div>

<div class="form-group">
<%= f.submit 'Submit', class: "btn btn-info pull-right" %>
</div>
<% end %>